---
import Layout from "../layouts/Layout.astro";
import { Zap, ShieldCheck, Wifi, CheckCircle2 } from "lucide-react";
---

<Layout title="Services | Volt Master Electricians">
    <main class="bg-slate-900">
        <!-- Header -->
        <div class="bg-black py-24 sm:py-32">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl lg:mx-0">
                    <h1
                        class="text-4xl font-header font-bold tracking-widest uppercase sm:text-6xl text-cyan-400"
                    >
                        Future Ready
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-slate-400 font-body">
                        Advanced electrical infrastructure for the modern
                        connected home.
                    </p>
                </div>
            </div>
        </div>

        <!-- content -->
        <div class="mx-auto max-w-7xl px-6 lg:px-8 py-24">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-16">
                <!-- Smart Home -->
                <div class="flex flex-col gap-6">
                    <div
                        class="h-16 w-16 bg-slate-800 border border-slate-700 rounded-none flex items-center justify-center text-cyan-400 mb-2 shadow-sm"
                    >
                        <Wifi size={32} />
                    </div>
                    <h3
                        class="text-3xl font-header font-bold text-white uppercase tracking-wide"
                    >
                        Smart Home Automation
                    </h3>
                    <p class="text-slate-400 text-lg font-body">
                        Transform your living experience. We design and install
                        integrated systems that control your lighting, blinds,
                        and audio from a single interface or voice command.
                    </p>
                    <ul class="space-y-3 text-slate-400 mt-4 font-body">
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-cyan-500" /> Lutron Lighting
                            Scenes
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-cyan-500" /> Automated Blinds
                            & Shading
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-cyan-500" /> Hardwired CAT6
                            Data Networks
                        </li>
                    </ul>
                </div>

                <!-- EICR -->
                <div class="flex flex-col gap-6">
                    <div
                        class="h-16 w-16 bg-slate-800 border border-slate-700 rounded-none flex items-center justify-center text-cyan-400 mb-2 shadow-sm"
                    >
                        <ShieldCheck size={32} />
                    </div>
                    <h3
                        class="text-3xl font-header font-bold text-white uppercase tracking-wide"
                    >
                        EICR & Landlord Compliance
                    </h3>
                    <p class="text-slate-400 text-lg font-body">
                        Ensure your property is safe and legal. We provide
                        rigorous Electrical Installation Condition Reports
                        (EICR) with digital certificates issued within 24 hours.
                    </p>
                    <ul class="space-y-3 text-slate-400 mt-4 font-body">
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-cyan-500" /> 100% Circuit
                            Inspection
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-cyan-500" /> Fixed-price
                            remedial quotes
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-cyan-500" /> Automated Renewal
                            Reminders
                        </li>
                    </ul>
                </div>

                <!-- Rewiring -->
                <div class="flex flex-col gap-6">
                    <div
                        class="h-16 w-16 bg-slate-800 border border-slate-700 rounded-none flex items-center justify-center text-cyan-400 mb-2 shadow-sm"
                    >
                        <Zap size={32} />
                    </div>
                    <h3
                        class="text-3xl font-header font-bold text-white uppercase tracking-wide"
                    >
                        Full Rewiring
                    </h3>
                    <p class="text-slate-400 text-lg font-body">
                        Modernize your homeâ€™s nervous system. We replace
                        dangerous, old cabling with modern, safety-compliant
                        wiring, upgrading your capacity for modern appliances.
                    </p>
                    <ul class="space-y-3 text-slate-400 mt-4 font-body">
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-cyan-500" /> Dust-free Wall
                            Chasing
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-cyan-500" /> RCBO Consumer
                            Units with Surge Protection
                        </li>
                        <li class="flex gap-2">
                            <CheckCircle2 className="text-cyan-500" /> Smart-ready
                            Neutral wires
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </main>
</Layout>
