---
import Layout from "../layouts/Layout.astro";
import { Phone, Mail, MapPin } from "lucide-react";
---

<Layout title="Contact Us | Volt Master">
    <main class="bg-gray-50">
        <div class="bg-gray-900 py-24 sm:py-32">
            <div class="mx-auto max-w-7xl px-6 lg:px-8 text-center">
                <h1
                    class="text-4xl font-bold tracking-tight text-white sm:text-6xl"
                >
                    Get in Touch
                </h1>
                <p class="mt-6 text-lg leading-8 text-gray-300">
                    Ready to upgrade your home? Need an emergency repair? We are
                    here to help.
                </p>
            </div>
        </div>

        <div class="mx-auto max-w-7xl px-6 lg:px-8 py-24">
            <div
                class="bg-white rounded-2xl shadow-xl overflow-hidden md:grid md:grid-cols-3"
            >
                <div
                    class="bg-accent p-8 md:col-span-1 text-white flex flex-col justify-between"
                >
                    <div>
                        <h3 class="text-xl font-bold mb-8">Contact Info</h3>
                        <ul class="space-y-6">
                            <li class="flex items-center gap-4">
                                <Phone size={20} />
                                <span>0800 123 4567</span>
                            </li>
                            <li class="flex items-center gap-4">
                                <Mail size={20} />
                                <span>hello@voltmaster.co.uk</span>
                            </li>
                            <li class="flex items-center gap-4">
                                <MapPin size={20} />
                                <span>Serving Hertfordshire & North London</span
                                >
                            </li>
                        </ul>
                    </div>
                    <div class="mt-12 p-6 bg-white/10 rounded-xl">
                        <p class="font-bold text-lg mb-2">Emergency?</p>
                        <p class="text-sm opacity-90 mb-4">
                            Our rapid response team is available 24/7 for
                            dangerous faults.
                        </p>
                        <a
                            href="tel:08001234567"
                            class="block w-full text-center bg-white text-accent font-bold py-2 rounded-lg hover:bg-gray-100 transition-colors"
                            >Call Now</a
                        >
                    </div>
                </div>

                <div class="p-8 md:col-span-2">
                    <form class="space-y-6">
                        <div
                            class="grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-2"
                        >
                            <div>
                                <label
                                    for="name"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Name</label
                                >
                                <div class="mt-2">
                                    <input
                                        type="text"
                                        name="name"
                                        id="name"
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-accent sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>
                            <div>
                                <label
                                    for="phone"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Phone</label
                                >
                                <div class="mt-2">
                                    <input
                                        type="tel"
                                        name="phone"
                                        id="phone"
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-accent sm:text-sm sm:leading-6"
                                    />
                                </div>
                            </div>
                            <div class="sm:col-span-2">
                                <label
                                    for="service"
                                    class="block text-sm font-medium leading-6 text-gray-900"
                                    >Service Required</label
                                >
                                <div class="mt-2">
                                    <select
                                        id="service"
                                        name="service"
                                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-accent sm:text-sm sm:leading-6"
                                    >
                                        <option>General Repair</option>
                                        <option>Full Rewire</option>
                                        <option>Consumer Unit Upgrade</option>
                                        <option>Smart Home / Lighting</option>
                                        <option>EV Charger</option>
                                        <option>Commercial / EICR</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div>
                            <label
                                for="message"
                                class="block text-sm font-medium leading-6 text-gray-900"
                                >Details</label
                            >
                            <div class="mt-2">
                                <textarea
                                    id="message"
                                    name="message"
                                    rows="4"
                                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-accent sm:text-sm sm:leading-6"
                                ></textarea>
                            </div>
                        </div>
                        <button
                            type="submit"
                            class="rounded-md bg-gray-900 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900 w-full sm:w-auto"
                            >Request Callback</button
                        >
                    </form>
                </div>
            </div>
        </div>
    </main>
</Layout>
