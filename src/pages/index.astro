---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import Testimonials from "../components/Testimonials.jsx";
import FAQ from "../components/FAQ.jsx";
import FeatureSection from "../components/FeatureSection.jsx";
---

<Layout title="Volt Master - Commercial & Residential Electrical">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative h-screen w-full overflow-hidden">
			<img
				src="/hero.png"
				alt="Modern electrical lighting background"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.4]"
			/>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex flex-col justify-center relative z-10"
			>
				<div class="max-w-2xl animate-fade-in-up">
					<div class="hidden sm:mb-8 sm:flex">
						<div
							class="relative rounded-full px-3 py-1 text-sm leading-6 text-gray-300 ring-1 ring-white/20 hover:ring-white/40 transition-all"
						>
							NICEIC Approved Contractors <a
								href="#"
								class="font-semibold text-accent"
								><span
									class="absolute inset-0"
									aria-hidden="true"></span>View Certs <span
									aria-hidden="true">&rarr;</span
								></a
							>
						</div>
					</div>
					<h1
						class="text-5xl font-bold tracking-tight text-white sm:text-7xl mb-6 drop-shadow-lg"
					>
						Powering the Future of <span class="text-accent"
							>Smart Homes</span
						>
					</h1>
					<p
						class="mt-6 text-lg leading-8 text-gray-200 drop-shadow-md"
					>
						Expert electrical installation, smart lighting design,
						and industrial maintenance. We bring energy and
						innovation to every project, safely and efficiently.
					</p>
					<div class="mt-10 flex items-center gap-x-6">
						<a
							href="#"
							class="rounded-full bg-accent px-8 py-3.5 text-lg font-semibold text-primary shadow-lg hover:bg-accent/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent transition-all duration-300 scale-100 hover:scale-105"
						>
							Get a Quote
						</a>
						<a
							href="#"
							class="text-lg font-semibold leading-6 text-white hover:text-accent transition-colors"
						>
							Emergency 24/7 <span aria-hidden="true">â†’</span>
						</a>
					</div>
				</div>
			</div>

			<!-- Glassmorphism Stats -->
			<div
				class="absolute bottom-0 left-0 right-0 bg-white/5 backdrop-blur-md border-t border-white/10 py-8"
			>
				<div
					class="mx-auto max-w-7xl px-6 lg:px-8 flex justify-around text-white text-center"
				>
					<div>
						<div class="text-3xl font-bold text-accent">15+</div>
						<div class="text-sm text-gray-300">Years Exp.</div>
					</div>
					<div>
						<div class="text-3xl font-bold text-accent">2k+</div>
						<div class="text-sm text-gray-300">Rewires</div>
					</div>
					<div>
						<div class="text-3xl font-bold text-accent">A+</div>
						<div class="text-sm text-gray-300">Safety Rating</div>
					</div>
				</div>
			</div>
		</div>

		<div class="relative z-20 bg-white"><TrustBar client:visible /></div>

		<FeatureSection
			client:visible
			title="Intelligent Living"
			subtitle="Future-Ready Homes"
			description="Control your home's lighting, heating, and security with a single touch. We specialise in full smart home integration, designing systems that are as intuitive as they are impressive."
			features={[
				{
					title: "Smart Lighting",
					desc: "Mood scenes and automated schedules via Lutron/Rako.",
				},
				{
					title: "Energy Efficient",
					desc: "LED upgrades and solar integration systems.",
				},
				{
					title: "Safety First",
					desc: "Full EICR testing and consumer unit upgrades.",
				},
			]}
			imageSrc="/hero.png"
			quote="The lighting design completely changed the mood of our home. It feels like a different place at night."
			author="Sarah & Tom, Islington"
			align="right"
		/>
		<Testimonials client:visible />
		<FAQ client:visible />
	</main>
</Layout>
