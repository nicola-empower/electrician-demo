---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import Testimonials from "../components/Testimonials.jsx";
import FAQ from "../components/FAQ.jsx";
import FeatureSection from "../components/FeatureSection.jsx";
import ProcessFlow from "../components/ProcessFlow.jsx";
import {
	Zap,
	ShieldCheck,
	Smartphone,
	Award,
	Home,
	Building2,
} from "lucide-react";

const serviceTiers = [
	{
		title: "Residential & Rewires",
		desc: "From full consumer unit upgrades to complete home rewiring. BS 7671 compliant.",
		icon: Home,
	},
	{
		title: "Smart Home & Lighting",
		desc: "Lutron lighting, EV charger installation, and smart thermostat integration.",
		icon: Smartphone,
	},
	{
		title: "Commercial & Testing",
		desc: "EICR (Landlord Certificates), PAT testing, and 3-phase industrial maintenance.",
		icon: Building2,
	},
];
---

<Layout title="Volt Master | Smart Home & Electrical Specialists">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative h-screen w-full overflow-hidden">
			<img
				src="/hero.png"
				alt="Smart home electrical installation"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.4]"
			/>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex flex-col justify-center relative z-10"
			>
				<div class="max-w-3xl animate-fade-in-up">
					<div class="hidden sm:mb-8 sm:flex">
						<div
							class="relative rounded-full px-3 py-1 text-sm leading-6 text-gray-300 ring-1 ring-white/20 hover:ring-white/40 transition-all uppercase tracking-wide font-semibold"
						>
							24/7 Rapid Response • NICEIC Approved
						</div>
					</div>
					<h1
						class="text-4xl font-header font-bold tracking-widest text-white uppercase sm:text-7xl mb-6 drop-shadow-md"
					>
						The Smart Home <br />
						<span class="text-cyan-400">Integrator.</span>
					</h1>
					<p
						class="mt-6 text-xl leading-8 text-slate-300 drop-shadow-sm max-w-2xl font-body"
					>
						Transform your living experience with integrated
						lighting, data, and security. We bring the future of
						electrical engineering to your doorstep.
					</p>
					<div class="mt-10 flex flex-wrap items-center gap-6">
						<a
							href="/contact"
							class="rounded-full bg-accent px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-accent/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent transition-all duration-300 scale-100 hover:scale-105"
						>
							Get a Quote
						</a>
						<a
							href="tel:08001234567"
							class="rounded-full bg-red-600/90 backdrop-blur-sm border border-red-500/20 px-8 py-3.5 text-lg font-semibold text-white hover:bg-red-600 transition-all duration-300 animate-pulse"
						>
							Emergency 24/7 <span aria-hidden="true">→</span>
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- TrustBar (Certifications) -->
		<div class="relative z-20 bg-white">
			<TrustBar
				client:visible
				items={[
					{
						title: "NICEIC Approved",
						subtitle: "Gold Standard",
						icon: ShieldCheck,
						colorClass: "text-red-600",
					},
					{
						title: "Part P Certified",
						subtitle: "Building Control",
						icon: Award,
						colorClass: "text-blue-600",
					},
					{
						title: "£5m Insurance",
						subtitle: "Fully Covered",
						icon: Zap,
						colorClass: "text-yellow-500",
					},
				]}
			/>
		</div>

		<!-- Services Section -->
		<FeatureSection
			client:visible
			title="Precision Electrical Engineering"
			subtitle="Our Expertise"
			description="We separate the bread and butter from the gold mine. Whether you need a simple fuse board upgrade or a complex smart home ecosystem, our engineers deliver with surgical precision."
			features={serviceTiers}
			imageSrc="/hero.png"
			align="left"
			quote={null}
			author={null}
		/>

		<!-- Emergency Section -->
		<div class="py-24 bg-red-50 border-y border-red-100">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="lg:grid lg:grid-cols-2 lg:gap-16 items-center">
					<div>
						<h2
							class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl mb-6"
						>
							When the Lights Go Out, We Are On Our Way.
						</h2>
						<p class="text-lg text-gray-600 mb-8">
							Electrical faults aren't just inconvenient; they are
							dangerous. Our 24/7 emergency response team is
							stationed across the local area to handle power
							cuts, tripping circuits, and exposed wiring.
						</p>
						<ul class="space-y-4 mb-8">
							<li class="flex items-center gap-3">
								<div
									class="bg-red-100 p-2 rounded-full text-red-600"
								>
									<Zap size={20} />
								</div>
								<span class="font-semibold text-gray-800"
									>1 Hour Response Goal</span
								>
							</li>
							<li class="flex items-center gap-3">
								<div
									class="bg-red-100 p-2 rounded-full text-red-600"
								>
									<ShieldCheck size={20} />
								</div>
								<span class="font-semibold text-gray-800"
									>No Call-Out Fee (if work accepted)</span
								>
							</li>
							<li class="flex items-center gap-3">
								<div
									class="bg-red-100 p-2 rounded-full text-red-600"
								>
									<Award size={20} />
								</div>
								<span class="font-semibold text-gray-800"
									>Fully Stocked Vans for First-Time Fixes</span
								>
							</li>
						</ul>
						<a
							href="tel:08001234567"
							class="rounded-full bg-red-600 px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-red-700 transition-all"
						>
							Call Emergency Line
						</a>
					</div>
					<div class="mt-12 lg:mt-0 relative">
						<div
							class="absolute inset-0 bg-red-200 blur-3xl opacity-30 rounded-full"
						>
						</div>
						<img
							src="/hero.png"
							class="relative rounded-2xl shadow-xl ring-1 ring-gray-900/10 rotate-3 hover:rotate-0 transition-all duration-500"
							alt="Emergency Electrician"
						/>
					</div>
				</div>
			</div>
		</div>

		<!-- Process Section -->
		<ProcessFlow
			client:visible
			title="A Bright Idea: Hassle-Free Service"
			subtitle="The Workflow"
			steps={[
				{
					title: "Consultation",
					desc: "We assess load requirements and safety needs with latest testing gear.",
				},
				{
					title: "Fixed Quote",
					desc: "Digital quote via email. Click to accept. No vague estimates.",
				},
				{
					title: "Execution",
					desc: "Uniformed, boot-covered engineers work with surgical precision.",
				},
				{
					title: "Digital Sign-Off",
					desc: "Part P and EICR certificates issued digitally immediately.",
				},
			]}
		/>

		<!-- Safety Guarantee -->
		<div class="py-24 bg-gray-900 text-white">
			<div class="mx-auto max-w-7xl px-6 lg:px-8 text-center">
				<h2 class="text-3xl font-bold mb-6">
					Your Safety is Our License.
				</h2>
				<p class="text-gray-400 max-w-2xl mx-auto mb-12">
					We don't guess; we test. Every job we do is fully insured,
					certified, and backed by our rock-solid guarantee.
				</p>
				<div class="grid md:grid-cols-3 gap-8 text-left">
					<div
						class="bg-gray-800 p-6 rounded-xl border border-gray-700"
					>
						<h3 class="font-bold text-accent mb-2">
							NICEIC / NAPIT Approved
						</h3>
						<p class="text-sm text-gray-400">
							Authorized to self-certify all notifiable work under
							Building Regulations.
						</p>
					</div>
					<div
						class="bg-gray-800 p-6 rounded-xl border border-gray-700"
					>
						<h3 class="font-bold text-white mb-2">
							£5m Liability Insurance
						</h3>
						<p class="text-sm text-gray-400">
							Complete protection for your property and assets.
						</p>
					</div>
					<div
						class="bg-gray-800 p-6 rounded-xl border border-gray-700"
					>
						<h3 class="font-bold text-white mb-2">
							6-Year Warranty
						</h3>
						<p class="text-sm text-gray-400">
							On all workmanship, backed by industry regulators.
						</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Recent Work Section -->
		<div class="bg-gray-50 py-24 sm:py-32">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2
						class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
					>
						Recent Work
					</h2>
					<p class="mt-4 text-lg text-gray-600">
						Latest installations and upgrades.
					</p>
				</div>
				<div class="mx-auto max-w-4xl">
					<img
						src="/electrician.png"
						alt="Recent electrical installation"
						class="w-full rounded-2xl shadow-xl ring-1 ring-gray-900/10 object-cover aspect-video"
					/>
				</div>
			</div>
		</div>

		<Testimonials
			client:visible
			reviews={[
				{
					text: "The smart lighting setup is incredible. I wanted to upgrade my kitchen lighting but didn't know where to start. Volt Master designed a full LED system I can control from my phone.",
					author: "James Wilson",
					location: "Smart Home",
					role: "Local Resident",
					rating: 5,
				},
				{
					text: "Arrived within 45 minutes on a Sunday. Found the fault immediately. A lifesaver.",
					author: "Sarah Jenkins",
					location: "Emergency",
					role: "Homeowner",
					rating: 5,
				},
				{
					text: "We use Volt Master for all our office EICR testing. Their digital certificates make compliance easy.",
					author: "Robert Smith",
					location: "Commercial",
					role: "Business Owner",
					rating: 5,
				},
			]}
		/>

		<FAQ client:visible />
	</main>
</Layout>
